{
  "name": "realtime-backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --env-file=.env.dev --respawn ./src/server.ts",
    "build": "rm -rf ./build && tsc && find ./src -type f -not -name '*.js' -not -name '*.ts' -exec cp -t ./build -- {} +",
    "start": "pm2 start ecosystem.config.js --env production --no-daemon"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node-fetch": "^2.6.10"
  },
  "dependencies": {
    "cookie": "^0.6.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "2",
    "socket.io": "^4.7.4"
  }
}
